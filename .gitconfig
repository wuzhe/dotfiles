[user]
        name = Zhe Wu
        email = zwu@avos.com

[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[core]
        pager = less
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
        excludesfile = /home/wz/.gitignore
        editor = vim

[alias]
        co = checkout
